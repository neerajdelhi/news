{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
	<div clas="row">
		<h3 class="mt-5 mb-5">Create News</h3>
		{% for message in app.flashes('notice') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<div class="col-md-6 offset-md-3">
			{{ form_start(form) }}
				<div class="form-group">
					{{ form_widget(form.title,{'attr':{'class':'form-control mb-2','placeholder':'Title goes here...'}}) }}
					{{ form_widget(form.short_description,{'attr':{'class':'form-control mb-2','placeholder':'Short Descriptions comes here...'}}) }}
					{{ form_widget(form.picture,{'attr':{'class':'form-control mb-2','placeholder':'Picture load here...'}}) }}
					{{ form_widget(form.date,{'attr':{'class':'form-control mb-2','placeholder':'Date selected from here...'}}) }}
				</div>
				
				<div class="form-group">
					<button class="btn btn-info btn-block text-white">Submit</button>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}